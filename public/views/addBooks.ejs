        <input type="text" class="inputField" id="Author" name="Author" required autofocus> <br> <br> 
        <label class="label" for="Copies">Copies :</label><br>
        <input type="number" class="inputField" id="Copies" name="Copies" required autofocus> <br> <br> 
        <input type="submit" value="+ Add" id="submit">
      </form>
